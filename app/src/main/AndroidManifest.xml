<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.scanstomas">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/scan_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name="com.scanstomas.common.Tutorial"
            android:exported="false" />
        <activity
            android:name="com.scanstomas.AgregarPublicacion"
            android:exported="false" />
        <activity
            android:name="com.scanstomas.RegistroActivity"
            android:exported="false" />
        <activity
            android:name="com.scanstomas.PerfilActivity"
            android:exported="false" />
        <activity
            android:name="com.scanstomas.MainActivity2"
            android:exported="false" />
        <activity
            android:name="com.scanstomas.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.scanstomas.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>