<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".RegistroAnimal">

  <LinearLayout
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="#C112309F"
      android:layout_margin="10dp">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Crear Publicacion"
          android:textAlignment="center"
          android:textSize="25dp"
          android:textColor="@color/black"
          android:textStyle="bold"></TextView>
      <EditText
          android:id="@+id/datosAnimal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:padding="20dp"
          android:textAlignment="center"
          android:background="#8BFFFFFF"
          android:hint="Datos Personales - Nombre - Celular"></EditText>
      <EditText
          android:id="@+id/lugarAnimal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:padding="9dp"
          android:background="#8BFFFFFF"
          android:hint="Lugar encontrado"></EditText>
      <EditText
          android:id="@+id/descripcionAnimal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:padding="9dp"
          android:background="#8BFFFFFF"
          android:hint="Descripcion"></EditText>
      <Button
          android:id="@+id/btnSubir"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:backgroundTint="#1F3B7E"
          android:layout_gravity="center"
          android:text="Subir">
      </Button>
  </LinearLayout>

</androidx.cardview.widget.CardView>